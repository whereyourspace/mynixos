entry {
  placeholder: "Fly";
  text-color: @foreground-normal-color;
}

num-rows {
  text-color: @foreground-normal-color;
}

num-filtered-rows {
  text-color: @foreground-normal-color;
}

mode-switcher {
  orientation: vertical;
  enabled: false;
}

listview {
  //require-input: true;
  scrollbar: false;
  lines: 5;
  columns: 2;
  //fixed-height: false;
  //fixed-columns: true;
  //lines: 10;
  //layout: vertical;
  //flow: horizontal;
  //padding: 0px 32px;
}

element {
  margin: 6px;
  spacing: 6px;
}

scrollbar {
}

element-text {
  expand: true;
  text-color: @foreground-normal-color;
}

element-prefix {
  expand: false;
  width: 6px;
  background-color: transparent;
  padding: 6px;
}

element-prefix selected.active {
  border: 2px;
  border-color: @selected-color;
  background-color: @selected-color;
}

element-prefix selected.normal {
  border: 2px;
  border-color: @selected-color;
  background-color: @selected-color;
}

element-prefix selected.urgent {
  border: 2px;
  border-color: @selected-color;
  background-color: @selected-color;
}

