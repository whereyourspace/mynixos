//@theme  "layout.rasi"
@import "colors.rasi"

window {
  border: 4px solid;
  border-color: #15181b;

  location: center;
  anchor: center;

  background-color: #333a3f;

  children: [ mainbox ];
}

mainbox {
  orientation: vertical;

  //children: [ 
  //  inputbar,
  //  listview,
  //  mode-switcher
  //];
}

inputbar {
  orientation: horizontal;

  children: [
    prompt,
    entry,
    case-indicator,
    num-filtered-rows,
    num-rows
  ]; 

  spacing: 10px;
  padding: 32px 64px;
}

prompt {
  enabled: false;
}

entry {
  placeholder: "Fly";
}

case-indicator {
  enabled: true;
}

mode-switcher {
  orientation: vertical;
  enabled: false;
}

//listview {
//  layout: vertical;
//  flow: horizontal;
//}

scrollbar {
}

element {
  orientation: horizontal;

  children: [
    element-prefix,
    element-text
  ];
}

